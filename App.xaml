<Application x:Class="Client_Management_System_V4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Client_Management_System_V4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                 <!-- NEW: Merge your custom ScrollBar style dictionary -->
                <ResourceDictionary Source="Styles/DarkThemeScrollBar.xaml"/>
                <!-- Merge your custom ComboBox style dictionary -->
                <ResourceDictionary Source="Styles/DarkThemeComboBox.xaml"/>
                <ResourceDictionary Source="/Styles/Button.xaml"/>
                <ResourceDictionary Source="/Styles/Image.xaml"/>
                <ResourceDictionary Source="/Styles/Text.xaml"/>
                <ResourceDictionary Source="/Styles/Page.xaml"/>
                <ResourceDictionary Source="/Utilities/DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" xmlns:local="clr-namespace:Client_Management_System_V4.Utilities"/>
            <local:NullToBoolConverter x:Key="NullToBoolConverter" xmlns:local="clr-namespace:Client_Management_System_V4.Utilities"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
