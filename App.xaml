<Application x:Class="Client_Management_System_V4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Client_Management_System_V4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Converters MUST be first so other dictionaries can use StaticResource to them -->
                <ResourceDictionary Source="Styles/GlobalConverters.xaml"/>
                
                <ResourceDictionary Source="Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="Styles/RoundedTextBox.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="Styles/DarkThemeScrollBar.xaml"/>
                <ResourceDictionary Source="Styles/DarkThemeComboBox.xaml"/>
                <ResourceDictionary Source="Styles/Button.xaml"/>
                <ResourceDictionary Source="Styles/Image.xaml"/>
                <ResourceDictionary Source="Styles/Text.xaml"/>
                <ResourceDictionary Source="Styles/Page.xaml"/>
                <ResourceDictionary Source="Utilities/DataTemplate.xaml"/>
                <ResourceDictionary Source="Styles/CheckBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
