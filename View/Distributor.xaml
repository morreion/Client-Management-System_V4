<UserControl x:Class="Client_Management_System_V4.View.Distributor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:DistributorVM />
    </UserControl.DataContext>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <!--Added  Style="{StaticResource SearchTextBoxStyle}",
            , Tag="Enter name..." -->
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource SearchTextBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Enter name..." 
                     FontSize="14"
                     Padding="10,8"
                     Background="#2D3035"
                     Foreground="#DBDBDB"
                     BorderBrush="#3F4347"
                     BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Distributor List DataGrid -->
        <Border Grid.Row="1" 
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <DataGrid ItemsSource="{Binding Distributors}"
                      SelectedItem="{Binding SelectedDistributor}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="#2D3035"
                      Foreground="#DBDBDB"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      BorderThickness="0"
                      RowStyle="{StaticResource GlobalDataGridRowStyle}"
                      CellStyle="{StaticResource GlobalDataGridCellStyle}"
                      HorizontalGridLinesBrush = "#3F4347" 
                      VerticalGridLinesBrush = "#3F4347">
                
                  <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding DistributorID}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="1.5*"/>
                    <DataGridTextColumn Header="Work Phone" Binding="{Binding Work_Phone}" Width="*"/>
                    <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.2*"/>
                    <DataGridTextColumn Header="Website" Binding="{Binding Website}" Width="1.2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10">
            <Button Content="âž• Add New"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource RoundedButtonStyle}"   
                    Background="#10B981"
                    Tag="#0a4a0f" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            
            <Button Content="ðŸ’¾ Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource RoundedButtonStyle}"  
                    Background="#3B82F6"
                    Tag="#25108f"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsDistributorSelected}"/>
            
            <Button Content="ðŸ—‘ï¸ Delete"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource RoundedButtonStyle}"  
                    Background="#EF4444"
                    Tag="#9c0505"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsDistributorSelected}"/>
            
            <Button Content="âŒ Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource RoundedButtonStyle}"  
                    Background="#6B7280"
                    Tag="#4a4a4f"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Distributor Details Form -->
        <Border Grid.Row="3"
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name (Spans 2 columns) -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Name *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDistributor.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Address (Spans 2 columns) -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Address" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDistributor.Address, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                    <!-- Work Phone -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                        <TextBlock Text="Work Phone" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDistributor.Work_Phone, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Mobile -->
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="Mobile" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDistributor.Mobile, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Email" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                     Text="{Binding SelectedDistributor.Email, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                            <Button Grid.Column="1" Content="ðŸ“§" 
                                    Margin="10,0,0,0"
                                    Click="OpenEmail_Click"
                                    Tag="{Binding SelectedDistributor.Email}"
                                    Background="Transparent" Foreground="#DBDBDB" BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>

                    <!-- Website -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Website" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                         <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                     Text="{Binding SelectedDistributor.Website, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                            <Button Grid.Column="1" Content="ðŸŒ" 
                                    Margin="10,0,0,0"
                                    Click="OpenWebsite_Click"
                                    Tag="{Binding SelectedDistributor.Website}"
                                    Background="Transparent" Foreground="#DBDBDB" BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
