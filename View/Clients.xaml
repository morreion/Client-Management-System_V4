<UserControl x:Class="Client_Management_System_V4.View.Clients"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:ClientVM />
    </UserControl.DataContext>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <!-- Search Bar & Filters -->
        <Border Grid.Row="0" Margin="0,0,0,10" Background="#2D3035" CornerRadius="8" Padding="10" BorderBrush="#3F4347" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>    <!-- Search (Flexible) -->
                    <ColumnDefinition Width="160"/>  <!-- Gender -->
                    <ColumnDefinition Width="Auto"/> <!-- Age -->
                </Grid.ColumnDefinitions>

                <!-- 1. Text Search -->
                <TextBox x:Name="SearchBox" Grid.Column="0"
                         Style="{StaticResource SearchTextBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Search for name, email or mobile..."
                         FontSize="14"
                         Padding="10,8"
                         Background="#1F2226"
                         Foreground="#DBDBDB"
                         BorderBrush="#3F4347"
                         BorderThickness="1"
                         Margin="0,0,15,0">
                     <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- 2. Gender Filter -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding GenderFilters}"
                          SelectedItem="{Binding SelectedGenderFilter}"
                          Style="{StaticResource MyCustomComboBoxStyle}"
                          Height="38"
                          Margin="0,0,15,0"/>

                <!-- 3. Age Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Age" IsChecked="{Binding FilterByAge}" 
                              Style="{StaticResource ReportsCheckBoxStyle}"
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Border Visibility="{Binding FilterByAge, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="#1F2226" CornerRadius="4" BorderBrush="#3F4347" BorderThickness="1" Padding="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding MinAge, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource RoundedTextBoxStyle}" 
                                     Width="40" Height="30" 
                                     VerticalContentAlignment="Center" TextAlignment="Center"
                                     Background="Transparent" BorderThickness="0"/>
                            <TextBlock Text="-" Foreground="#888" VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxAge, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource RoundedTextBoxStyle}" 
                                     Width="40" Height="30" 
                                     VerticalContentAlignment="Center" TextAlignment="Center"
                                     Background="Transparent" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Client List DataGrid -->
        <Border Grid.Row="1" 
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <Grid>
            <!--  HorizontalGridLinesBrush = "#3F4347"
                          VerticalGridLinesBrush = "#3F4347"-->
                <DataGrid x:Name="ClientsDataGrid"
                          ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="#2D3035" Foreground="#DBDBDB"
                          RowStyle="{StaticResource GlobalDataGridRowStyle}"
                          CellStyle="{StaticResource GlobalDataGridCellStyle}"
                          GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0"
                          HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <!-- <Setter Property="SeparatorVisibility" Value="All"/>-->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ClientID}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Gender" Binding="{Binding GenderDisplay}" Width="80"/>
                        <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="120"/>
                        <DataGridTemplateColumn Header="Email" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Hyperlink Click="Hyperlink_Click">
                                            <TextBlock Text="{Binding Email}"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="DOB" Binding="{Binding DOB, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading Indicator -->
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="#3B82F6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,10">
            <Button Content="➕ Add New Client" 
                    Command="{Binding AddNewCommand}" 
                    Style="{StaticResource RoundedButtonStyle}"  
                    Background="#10B981" 
                    Tag="#0a4a0f" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Margin="0,0,10,0" 
                    Cursor="Hand"/>
            
            <Button Content="💾 Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#3B82F6"
                    Tag="#25108f"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"                    
                    Cursor="Hand"
                    IsEnabled="{Binding IsClientSelected}"/>
            
            <Button Content="🗑️ Delete"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#EF4444"
                    Tag="#9c0505"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"                    
                    Cursor="Hand"
                    IsEnabled="{Binding IsClientSelected}"/>
            
            <Button Content="❌ Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#6B7280"
                    Tag="#4a4a4f" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Client Details Form -->
        <Border Grid.Row="3"
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Column 1 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Name *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="0" Grid.Column="0" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Address" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="0" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Address, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Email" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <Grid Grid.Row="2" Grid.Column="0" Margin="0,20,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedClient.Email, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                        <Button Grid.Column="1" Content="📧" 
                                ToolTip="Send Email"
                                Margin="10,0,0,0"
                                Click="OpenEmail_Click"
                                Tag="{Binding SelectedClient.Email}"
                                Background="Transparent" Foreground="#DBDBDB" BorderThickness="0" Cursor="Hand"/>
                    </Grid>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Occupation" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="0" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Occupation, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Referral Source" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="0" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Ref, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Gender" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,10">
                        <RadioButton GroupName="Gender" Content="Male" Foreground="#DBDBDB" Margin="0,0,20,0"
                                     IsChecked="{Binding SelectedClient.Gender, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"/>
                        <RadioButton GroupName="Gender" Content="Female" Foreground="#DBDBDB"
                                     IsChecked="{Binding SelectedClient.Gender, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"/>
                    </StackPanel>

                    <!-- Column 2 -->
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                               Text="Date of Birth" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <DatePicker Grid.Row="0" Grid.Column="2" 
                                SelectedDate="{Binding SelectedClient.DOB}"
                                Margin="0,20,0,10" 
                                Padding="8" 
                                Background="#3F4347" 
                                Foreground="#DBDBDB" 
                                BorderBrush="#555">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="#3F4347"/>
                                <Setter Property="Foreground" Value="#DBDBDB"/>
                                <Setter Property="BorderBrush" Value="#555"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <TextBlock Grid.Row="1" Grid.Column="2" 
                               Text="Mobile" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="2" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Mobile, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" 
                               Text="Marital Status" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                   
                    <!--Maritial Status combobox start-->

     <ComboBox Grid.Row="2" Grid.Column="2" 
                  Text="{Binding SelectedClient.Marital_Status}"
                  Margin="0,20,0,10" 
                  Style="{StaticResource MyCustomComboBoxStyle}" >
            <ComboBoxItem Content="Single"/>
            <ComboBoxItem Content="Married"/>
            <ComboBoxItem Content="In Relationship"/>
            <ComboBoxItem Content="Divorced"/>
            <ComboBoxItem Content="Widowed"/>
        </ComboBox>


                    <!--Maritial Status combobox end-->

                    <TextBlock Grid.Row="3" Grid.Column="2" 
                               Text="Children" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="2" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Children, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Enter number of children (1, 2, ..)"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="4" Grid.Column="2" 
                               Text="Alternate Contact" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="2" 
                             Style="{StaticResource RoundedTextBoxStyle}" 
                             Text="{Binding SelectedClient.Alt_Contact, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
