<UserControl x:Class="Client_Management_System_V4.View.Clients"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:Client_Management_System_V4.Utilities"
             Style="{StaticResource Page_Style}">

    <UserControl.Resources>
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:ClientVM />
    </UserControl.DataContext>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Padding="10,8"
                     Background="#2D3035"
                     Foreground="#DBDBDB"
                     BorderBrush="#3F4347"
                     BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1"
                    Content="🔍 Search"
                    Command="{Binding SearchCommand}"
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </Grid>

        <!-- Client List DataGrid -->
        <Border Grid.Row="1" 
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <Grid>
            <!--  HorizontalGridLinesBrush = "#3F4347"
                          VerticalGridLinesBrush = "#3F4347"-->
                <DataGrid x:Name="ClientsDataGrid"
                          ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility= "All"
                          HeadersVisibility="Column"
                          Background="Transparent"
                          Foreground="#DBDBDB"
                          BorderThickness="0"
                          RowBackground="#2D3035"
                          AlternatingRowBackground="#32363B"
                          HorizontalGridLinesBrush = "#3F4347"
                          VerticalGridLinesBrush = "#3F4347"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <!-- <Setter Property="SeparatorVisibility" Value="All"/>-->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ClientID}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                        <DataGridTextColumn Header="DOB" Binding="{Binding DOB, StringFormat=\{0:yyyy-MM-dd\}}" Width="120"/>
                        <DataGridTextColumn Header="Gender" Binding="{Binding GenderDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading Indicator -->
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="#3B82F6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,10">
            <Button Content="➕ Add New Client"
                    Command="{Binding AddNewCommand}"
                    Padding="15,8"
                    Background="#10B981"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            
            <Button Content="💾 Save"
                    Command="{Binding SaveCommand}"
                    Padding="15,8"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsClientSelected}"/>
            
            <Button Content="🗑️ Delete"
                    Command="{Binding DeleteCommand}"
                    Padding="15,8"
                    Background="#EF4444"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsClientSelected}"/>
            
            <Button Content="❌ Cancel"
                    Command="{Binding CancelCommand}"
                    Padding="15,8"
                    Background="#6B7280"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Client Details Form -->
        <Border Grid.Row="3"
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Column 1, Editing -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Name *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="0" Grid.Column="0" 
                             Text="{Binding SelectedClient.Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Address" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="0" 
                             Text="{Binding SelectedClient.Address, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Email" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="2" Grid.Column="0" 
                             Text="{Binding SelectedClient.Email, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Occupation" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="0" 
                             Text="{Binding SelectedClient.Occupation, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Referral Source" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                   
                    <TextBox Grid.Row="4" Grid.Column="0" 
                             Text="{Binding SelectedClient.Ref, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555" />
                    

                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Gender" Foreground="#DBDBDB" Margin="0,0,0,10" />
                    <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,0">
                        <RadioButton Content="Female" IsChecked="{Binding SelectedClient.Gender, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}" 
                                     Foreground="#DBDBDB" GroupName="GenderGroup" Margin="0,0,15,0"/>
                        <RadioButton Content="Male" IsChecked="{Binding SelectedClient.Gender, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}" 
                                     Foreground="#DBDBDB" GroupName="GenderGroup"/>
                    </StackPanel>

                    <!-- Column 2 -->
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                               Text="Date of Birth" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <DatePicker Grid.Row="0" Grid.Column="2" 
                                SelectedDate="{Binding SelectedClient.DOB}"
                                Margin="0,20,0,10" 
                                Padding="8" 
                                Background="#3F4347" 
                                Foreground="#DBDBDB" 
                                BorderBrush="#555">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="#3F4347"/>
                                <Setter Property="Foreground" Value="#DBDBDB"/>
                                <Setter Property="BorderBrush" Value="#555"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <TextBlock Grid.Row="1" Grid.Column="2" 
                               Text="Mobile" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Grid.Column="2" 
                             Text="{Binding SelectedClient.Mobile, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" 
                               Text="Marital Status" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                   
                    <!--Maritial Status combobox start-->

     <ComboBox Grid.Row="2" Grid.Column="2" 
                  Text="{Binding SelectedClient.Marital_Status}"
                  Margin="0,20,0,10" 
                  Style="{StaticResource MyCustomComboBoxStyle}" >
            <ComboBoxItem Content="Single"/>
            <ComboBoxItem Content="Married"/>
            <ComboBoxItem Content="In Relationship"/>
            <ComboBoxItem Content="Divorced"/>
            <ComboBoxItem Content="Widowed"/>
        </ComboBox>


                    <!--Maritial Status combobox end-->

                    <TextBlock Grid.Row="3" Grid.Column="2" 
                               Text="Children" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="2" 
                             Text="{Binding SelectedClient.Children, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>

                    <TextBlock Grid.Row="4" Grid.Column="2" 
                               Text="Alternate Contact" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="2" 
                             Text="{Binding SelectedClient.Alt_Contact, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,20,0,10" Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
