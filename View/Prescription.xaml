<UserControl x:Class="Client_Management_System_V4.View.Prescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:PrescriptionVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#3F4347"/>
            <Setter Property="Foreground" Value="#DBDBDB"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.5*"/> <!-- Form is taller -->
        </Grid.RowDefinitions>

        <!-- Search -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14" Padding="10,8" Background="#2D3035"
                     Foreground="#DBDBDB" BorderBrush="#3F4347" BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1" Content="ðŸ” Search Prescriptions" Command="{Binding SearchCommand}"
                    Margin="10,0,0,0" Padding="15,8" Background="#3B82F6" Foreground="White" BorderThickness="0"/>
        </Grid>

        <!-- Master List -->
        <Border Grid.Row="1" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="10">
            <DataGrid ItemsSource="{Binding PrescriptionList}"
                      SelectedItem="{Binding SelectedPrescription}"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      Background="#2D3035" Foreground="#DBDBDB"
                      RowBackground="#2D3035" AlternatingRowBackground="#333740"
                      GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0"
                      HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347">
                
                  <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="1.5*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Prescription_Date, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Next Appt" Binding="{Binding Next_Appointment_Date, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Recommendations" Binding="{Binding Recommendations}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="âž• Add New" Command="{Binding AddCommand}" Padding="15,8" Background="#10B981" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
            <Button Content="ðŸ’¾ Save" Command="{Binding SaveCommand}" Padding="15,8" Background="#3B82F6" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteCommand}" Padding="15,8" Background="#EF4444" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="âŒ Cancel" Command="{Binding CancelCommand}" Padding="15,8" Background="#6B7280" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Detail Form -->
        <Border Grid.Row="3" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="15">
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Metadata -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Client Info &amp; Notes" FontSize="16" FontWeight="Bold" Foreground="#DBDBDB" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Client *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Clients}"
                                  SelectedValue="{Binding SelectedPrescription.ClientID}"
                                  SelectedValuePath="ClientID"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource MyCustomComboBoxStyle}"
                                  Height="38" Margin="0,0,0,10"/>

                        <TextBlock Text="Prescription Date" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                         <DatePicker SelectedDate="{Binding SelectedPrescription.Prescription_Date}" Height="38"
                                    Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555" Margin="0,0,0,10"/>

                        <TextBlock Text="Next Appointment" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                         <DatePicker SelectedDate="{Binding SelectedPrescription.Next_Appointment_Date}" Height="38"
                                    Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555" Margin="0,0,0,10"/>

                        <TextBlock Text="Recommendations" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SelectedPrescription.Recommendations, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80"/>
                    </StackPanel>

                    <!-- Right: Supplements List -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Supplements / Dosage" FontSize="16" FontWeight="Bold" Foreground="#DBDBDB" Margin="0,0,0,10"/>

                        <!-- Add Item Row -->
                        <Border Grid.Row="1" Background="#333740" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Add Supplement to List:" Foreground="#AAA" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding AvailableSupplements}"
                                              SelectedItem="{Binding ItemToAddSupplement}"
                                              DisplayMemberPath="Name"
                                              Style="{StaticResource MyCustomComboBoxStyle}"
                                              Height="30" Margin="0,0,5,0"/>
                                </Grid>
                                
                                <Grid Margin="0,10,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Breakfast" FontSize="10" Foreground="#AAA"/>
                                        <TextBox Text="{Binding ItemToAddBreakfast}" Background="#2D3035" Foreground="White" BorderBrush="#555"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,0,5,0">
                                        <TextBlock Text="Lunch" FontSize="10" Foreground="#AAA"/>
                                        <TextBox Text="{Binding ItemToAddLunch}" Background="#2D3035" Foreground="White" BorderBrush="#555"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="0,0,5,0">
                                        <TextBlock Text="Dinner" FontSize="10" Foreground="#AAA"/>
                                        <TextBox Text="{Binding ItemToAddDinner}" Background="#2D3035" Foreground="White" BorderBrush="#555"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="Bedtime" FontSize="10" Foreground="#AAA"/>
                                        <TextBox Text="{Binding ItemToAddBedtime}" Background="#2D3035" Foreground="White" BorderBrush="#555"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Button Content="âž• Add Item To List" Command="{Binding AddDetailItemCommand}" HorizontalAlignment="Right" Width="120" Padding="5" Background="#3B82F6" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <!-- Items Grid -->
                        <DataGrid Grid.Row="2" ItemsSource="{Binding CurrentSupplements}"
                                  SelectedItem="{Binding SelectedDetailItem}"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  Background="#2D3035" Foreground="#DBDBDB"
                                  RowBackground="#2D3035" AlternatingRowBackground="#333740"
                                  GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0" 
                                  HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347">
                            
                            <DataGrid.InputBindings>
                                <KeyBinding Key="Delete" Command="{Binding RemoveDetailItemCommand}"/>
                            </DataGrid.InputBindings>
                            
                               <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Supplement" Binding="{Binding SupplementName}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Brk" Binding="{Binding Breakfast}" Width="Auto"/>
                                <DataGridTextColumn Header="Lun" Binding="{Binding Lunch}" Width="Auto"/>
                                <DataGridTextColumn Header="Din" Binding="{Binding Dinner}" Width="Auto"/>
                                <DataGridTextColumn Header="Bed" Binding="{Binding Bedtime}" Width="Auto"/>
                            </DataGrid.Columns>
                             <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Remove" Command="{Binding RemoveDetailItemCommand}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
