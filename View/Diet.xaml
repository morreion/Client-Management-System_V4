<UserControl x:Class="Client_Management_System_V4.View.Diet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:DietVM />
    </UserControl.DataContext>

 <UserControl.Resources>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#3F4347"/>
            <Setter Property="Foreground" Value="#DBDBDB"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <!--Added Style="{StaticResource SearchTextBoxStyle}",
            Tag="Enter name..." -->
            <TextBox Style="{StaticResource SearchTextBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Enter name..." 
                     FontSize="14" Padding="10,8" Background="#2D3035"
                     Foreground="#DBDBDB" BorderBrush="#3F4347" BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- List -->
        <Border Grid.Row="1" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="10">
            <DataGrid ItemsSource="{Binding DietList}"
                      SelectedItem="{Binding SelectedDiet}"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      Background="#2D3035" Foreground="#DBDBDB"
                      RowStyle="{StaticResource GlobalDataGridRowStyle}"
                      CellStyle="{StaticResource GlobalDataGridCellStyle}"
                      GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0"
                      HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347">
                
                  <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="1.5*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Diet_Date, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Breakfast" Binding="{Binding Breakfast}" Width="1.5*"/>
                    <DataGridTextColumn Header="Lunch" Binding="{Binding Lunch}" Width="1.5*"/>
                    <DataGridTextColumn Header="Dinner" Binding="{Binding Dinner}" Width="1.5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="âž• Add New" Command="{Binding AddCommand}" Padding="15,8" Background="#10B981" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
            <Button Content="ðŸ’¾ Save" Command="{Binding SaveCommand}" Padding="15,8" Background="#3B82F6" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteCommand}" Padding="15,8" Background="#EF4444" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="âŒ Cancel" Command="{Binding CancelCommand}" Padding="15,8" Background="#6B7280" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="3" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="20">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Client & Date -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Client *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Clients}"
                                  SelectedValue="{Binding SelectedDiet.ClientID}"
                                  SelectedValuePath="ClientID"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource MyCustomComboBoxStyle}"
                                  Height="38"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Date" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                         <DatePicker SelectedDate="{Binding SelectedDiet.Diet_Date}" Height="38"
                                    Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Breakfast & Lunch -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0">
                        <TextBlock Text="Breakfast" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDiet.Breakfast, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,0,0">
                        <TextBlock Text="Lunch" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDiet.Lunch, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                    <!-- Dinner & Snacks -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,15,0,0">
                        <TextBlock Text="Dinner" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDiet.Dinner, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,15,0,0">
                        <TextBlock Text="Snacks" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedDiet.Snacks, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>
                    
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
