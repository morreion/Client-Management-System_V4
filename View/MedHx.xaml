<UserControl x:Class="Client_Management_System_V4.View.MedHx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:MedHxVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#3F4347"/>
            <Setter Property="Foreground" Value="#DBDBDB"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="Foreground" Value="#DBDBDB"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2D3035"/>
            <Setter Property="Foreground" Value="#DBDBDB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#3F4347" CornerRadius="4,4,0,0" Margin="2,0" Padding="10,5">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3B82F6" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#333740" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- List Area -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>    <!-- Detail Area -->
        </Grid.RowDefinitions>

        <!-- Search -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <!--Added Style="{StaticResource SearchTextBoxStyle}"-->
            <TextBox Style="{StaticResource SearchTextBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Enter name..." 
                     FontSize="14" Padding="10,8" Background="#2D3035"
                     Foreground="#DBDBDB" BorderBrush="#3F4347" BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Master List (Collapsed/Compact logic or standard top/bottom split) -->
        <!-- We'll use a standard top/bottom split for consistency with other views -->
        <Border Grid.Row="1" Height="150" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="10">
            <DataGrid ItemsSource="{Binding HistoryList}"
                      SelectedItem="{Binding SelectedHistory}"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      Background="#2D3035" Foreground="#DBDBDB"
                      RowStyle="{StaticResource GlobalDataGridRowStyle}"
                      CellStyle="{StaticResource GlobalDataGridCellStyle}"
                      GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0" 
                      HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347">
                
                  <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="1.5*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Assessment_Date, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Medication" Binding="{Binding Medication}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="âž• Add New" Command="{Binding AddCommand}"  Style="{StaticResource RoundedButtonStyle}" Background="#10B981" Tag="#0a4a0f" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
            <Button Content="ðŸ’¾ Save" Command="{Binding SaveCommand}"  Style="{StaticResource RoundedButtonStyle}" Background="#3B82F6" Tag="#25108f" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteCommand}"  Style="{StaticResource RoundedButtonStyle}" Background="#EF4444" Tag="#9c0505" Foreground="White" BorderThickness="0" Margin="0,0,10,0" IsEnabled="{Binding IsSelectionActive}"/>
            <Button Content="âŒ Cancel" Command="{Binding CancelCommand}"  Style="{StaticResource RoundedButtonStyle}" Background="#6B7280" Tag="#4a4a4f" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Detail Form (Tabs) -->
        <Border Grid.Row="3" Background="#2D3035" BorderBrush="#3F4347" BorderThickness="1" CornerRadius="8" Padding="15">
            <Grid>
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/> <!-- Header -->
                     <RowDefinition Height="*"/>    <!-- Tabs -->
                 </Grid.RowDefinitions>

                <!-- Header Info -->
                 <Grid Grid.Row="0" Margin="0,0,0,15">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Client *" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Clients}"
                                  SelectedValue="{Binding SelectedHistory.ClientID}"
                                  SelectedValuePath="ClientID"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource MyCustomComboBoxStyle}"
                                  Height="35"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Assessment Date" Style="{StaticResource FieldLabel}"/>
                         <DatePicker SelectedDate="{Binding SelectedHistory.Assessment_Date}" Height="35"
                                    Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>
                 </Grid>

                 <!-- Tabs -->
                 <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                     <!-- TAB 1: General History -->
                     <TabItem Header="Medical History">
                         <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                             <Grid>
                                 <Grid.ColumnDefinitions>
                                     <ColumnDefinition Width="*"/>
                                     <ColumnDefinition Width="20"/>
                                     <ColumnDefinition Width="*"/>
                                 </Grid.ColumnDefinitions>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition Height="Auto"/>
                                 </Grid.RowDefinitions>

                                 <!-- Left Col -->
                                 <StackPanel Grid.Row="0" Grid.Column="0">
                                     <TextBlock Text="Blood Test Results" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Blood_Test_Results}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>
                                 
                                 <StackPanel Grid.Row="1" Grid.Column="0">
                                     <TextBlock Text="Medications" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Medication}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>
                                 
                                 <StackPanel Grid.Row="2" Grid.Column="0">
                                     <TextBlock Text="Menstrual / Womens Health" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Menstrual_Notes}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>
                                 
                                 <StackPanel Grid.Row="3" Grid.Column="0">
                                     <TextBlock Text="Supplements (General Notes)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                              Text="{Binding SelectedHistory.Supplements}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>

                                 <!-- Right Col -->
                                 <StackPanel Grid.Row="0" Grid.Column="2">
                                     <TextBlock Text="Accidents / Previous Illness" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Accidents_Previous_Illness}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>
                                 
                                 <StackPanel Grid.Row="1" Grid.Column="2">
                                     <TextBlock Text="Vaccinations" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Vaccinations}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>
                                 
                                 <StackPanel Grid.Row="2" Grid.Column="2">
                                     <TextBlock Text="Family Medical History" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.Family_Med_Hx}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>

                                 <StackPanel Grid.Row="3" Grid.Column="2">
                                     <TextBlock Text="Other History Notes (Med_Hx)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedHistory.HistoryNotes}" Background="#3F4347" Foreground="#DBDBDB" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
                                 </StackPanel>

                             </Grid>
                         </ScrollViewer>
                     </TabItem>

                     <!-- TAB 2: Supplements Tracker -->
                     <TabItem Header="Supplements Tracker">
                         <Grid Margin="0,10,0,0">
                             <Grid.RowDefinitions>
                                 <RowDefinition Height="Auto"/> <!-- Adder -->
                                 <RowDefinition Height="*"/>    <!-- List -->
                             </Grid.RowDefinitions>

                             <!-- Adder Form -->
                             <Border Grid.Row="0" BorderBrush="#4B5563" BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                                 <Grid>
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="2*"/>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="2*"/>
                                         <ColumnDefinition Width="Auto"/>
                                     </Grid.ColumnDefinitions>
                                     
                                     <StackPanel Margin="0,0,5,0">
                                         <TextBlock Text="Supplement" Style="{StaticResource FieldLabel}"/>
                                         <ComboBox ItemsSource="{Binding AvailableSupplements}"
                                                   SelectedItem="{Binding SelectedSupplementToAdd}"
                                                   DisplayMemberPath="Name"
                                                   Style="{StaticResource MyCustomComboBoxStyle}" Height="30"/>
                                     </StackPanel>
                                     
                                     <StackPanel Grid.Column="1" Margin="0,0,5,0">
                                         <TextBlock Text="Dosage" Style="{StaticResource FieldLabel}"/>
                                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                                 Text="{Binding NewItemDosage}" Background="#3F4347" Foreground="#DBDBDB" Padding="5"/>
                                     </StackPanel>
                                     
                                     <StackPanel Grid.Column="2" Margin="0,0,5,0">
                                         <TextBlock Text="Frequency" Style="{StaticResource FieldLabel}"/>
                                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                                 Text="{Binding NewItemFrequency}" Background="#3F4347" Foreground="#DBDBDB" Padding="5"/>
                                     </StackPanel>
                                     
                                     <StackPanel Grid.Column="3" Margin="0,0,5,0">
                                         <TextBlock Text="Notes" Style="{StaticResource FieldLabel}"/>
                                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                                 Text="{Binding NewItemNotes}" Background="#3F4347" Foreground="#DBDBDB" Padding="5"/>
                                     </StackPanel>
                                     
                                     <Button Grid.Column="4" Content="Add Item" Command="{Binding AddSupplementCommand}"
                                             VerticalAlignment="Bottom" Padding="10,5" Background="#10B981" Foreground="White" BorderThickness="0" Height="28"/>
                                 </Grid>
                             </Border>

                             <!-- List -->
                             <DataGrid Grid.Row="1" ItemsSource="{Binding CurrentSupplements}"
                                      AutoGenerateColumns="False" CanUserAddRows="False"
                                      Background="#2D3035" Foreground="#DBDBDB"
                                      RowBackground="#2D3035" AlternatingRowBackground="#333740"
                                      GridLinesVisibility="None" HeadersVisibility="Column" BorderThickness="0">
                                <DataGrid.ColumnHeaderStyle>
                                     <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#3F4347"/>
                                        <Setter Property="Foreground" Value="#DBDBDB"/>
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                 <DataGrid.Columns>
                                     <DataGridTextColumn Header="Supplement" Binding="{Binding SupplementName}" Width="2*"/>
                                     <DataGridTextColumn Header="Dosage" Binding="{Binding Dosage}" Width="*"/>
                                     <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="*"/>
                                     <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*"/>
                                     <DataGridTemplateColumn Width="Auto">
                                         <DataGridTemplateColumn.CellTemplate>
                                             <DataTemplate>
                                                 <Button Content="Remove" 
                                                         Command="{Binding DataContext.RemoveSupplementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding}"
                                                         Background="#EF4444" Foreground="White" BorderThickness="0" Padding="5,2"/>
                                             </DataTemplate>
                                         </DataGridTemplateColumn.CellTemplate>
                                     </DataGridTemplateColumn>
                                 </DataGrid.Columns>
                             </DataGrid>
                         </Grid>
                     </TabItem>
                 </TabControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
