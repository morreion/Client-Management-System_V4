<UserControl x:Class="Client_Management_System_V4.View.Supplements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Style="{StaticResource Page_Style}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="Foreground" Value="#DBDBDB"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <vm:SupplementsVM />
    </UserControl.DataContext>

    <Grid Margin="15,60,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <!--Added  Style="{StaticResource SearchTextBoxStyle}",
            Tag="Enter supplement name..."-->
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource SearchTextBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Enter supplement name..."
                     FontSize="14"
                     Padding="10,8"
                     Background="#2D3035"
                     Foreground="#DBDBDB"
                     BorderBrush="#3F4347"
                     BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Supplements List DataGrid -->
        <Border Grid.Row="1" 
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <DataGrid ItemsSource="{Binding Supplements}"
                      SelectedItem="{Binding SelectedSupplement}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Background="#2D3035"
                      Foreground="#DBDBDB"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      BorderThickness="0"
                      RowStyle="{StaticResource GlobalDataGridRowStyle}"
                      CellStyle="{StaticResource GlobalDataGridCellStyle}"
                      HorizontalGridLinesBrush = "#3F4347"
                      VerticalGridLinesBrush = "#3F4347">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="SeparatorVisibility" Value="Visible"/>
                        <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red -->
                        <Setter Property="Background" Value="#3F4347"/>
                        <Setter Property="Foreground" Value="#DBDBDB"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#555"/>
                        
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                        
                                        <Thumb x:Name="PART_RightHeaderGripper"
                                               HorizontalAlignment="Right"
                                               Cursor="SizeWE"
                                               Width="1"
                                               Background="{TemplateBinding SeparatorBrush}"
                                               Visibility="{TemplateBinding SeparatorVisibility}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding SupplementID}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="1.5*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Distributor" Binding="{Binding DistributorName}" Width="1.2*"/>
                    <DataGridTextColumn Header="Usage" Binding="{Binding Usage}" Width="1.5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10">
            <Button Content="âž• Add New"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#10B981"
                    Tag="#0a4a0f"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            
            <Button Content="ðŸ’¾ Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#3B82F6"
                    Tag="#25108f"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsSupplementSelected}"/>
            
            <Button Content="ðŸ—‘ï¸ Delete"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#EF4444"
                    Tag="#9c0505"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsEnabled="{Binding IsSupplementSelected}"/>
            
            <Button Content="âŒ Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#6B7280"
                    Tag="#4a4a4f" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Supplement Details Form -->
        <Border Grid.Row="3"
                Background="#2D3035"
                BorderBrush="#3F4347"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                        <TextBlock Text="Name *" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedSupplement.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Type -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="Type" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedSupplement.Type, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"/>
                    </StackPanel>

                    <!-- Distributor (ComboBox) -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Distributor *" Foreground="#DBDBDB" Margin="0,0,0,5" VerticalAlignment="Bottom"/>
                          
                          <!-- Margin="0,10,5,25", the values are applied to the left, top, right, and bottom (in that order).-->
                           <!--Button to go to distributor manager  overlay-->
                            <Button Grid.Column="1" 
                                    Content="âš™ï¸ Manage Distributors" 
                                    Command="{Binding OpenDistributorManagerCommand}" 
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Background="#2AA63E" 
                                    Tag="#178236"
                                    Foreground="White" 
                                    BorderThickness="0" 
                                    Cursor="Hand" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,8,8,8"
                                    ToolTip="Click to manage distributors"/>
                        </Grid>
                        
                        <ComboBox ItemsSource="{Binding Distributors}"
                                  SelectedValue="{Binding SelectedSupplement.DistributorID}"
                                  SelectedValuePath="DistributorID"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource MyCustomComboBoxStyle}"
                                  Padding="8"
                                  Height="38"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Description" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedSupplement.Description, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                    <!-- Usage -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Usage Instructions" Foreground="#DBDBDB" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                 Text="{Binding SelectedSupplement.Usage, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8" Background="#3F4347" Foreground="#DBDBDB" BorderBrush="#555"
                                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Border>
    <!-- DISTRIBUTOR MANAGER OVERLAY -->
    <Grid Grid.Row="0" Grid.RowSpan="4" Panel.ZIndex="100" 
          Tag="{Binding IsDistributorManagerOpen}"
          Style="{StaticResource Overlay_Grid_Style}">
        
        <!-- Drawer Content -->
        <Border Tag="{Binding IsDistributorManagerOpen}" Style="{StaticResource Drawer_Style}" HorizontalAlignment="Right" Width="500" Background="#212529" BorderBrush="#3F4347" BorderThickness="1,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Edit Form -->
                    <RowDefinition Height="*"/>    <!-- List -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Command="{Binding CloseDistributorManagerCommand}" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Content="â¬… Back" 
                            Background="#155DFC" 
                            Tag ="#193CB8" 
                            Foreground="#DBDBDB" 
                            BorderThickness="0" 
                            Margin="0,0,20,0" 
                            FontSize="16"/>
                    <TextBlock Text="Manage Distributors" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Edit Form -->
                <Border Grid.Row="1" Background="#2D3035" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Add / Edit Distributor" FontWeight="SemiBold" Foreground="#DBDBDB" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Col 1 -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Name *" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Name, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5" Margin="0,0,0,10"/>

                                <TextBlock Text="Mobile" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Mobile, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Email" Style="{StaticResource FieldLabel}"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Email, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5"/>
                                    <Button Grid.Column="1" Content="ðŸ“§" 
                                            Margin="10,0,0,0"
                                            Click="OpenEmail_Click"
                                            Tag="{Binding SelectedManagerDistributor.Email}"
                                            Background="Transparent" Foreground="#DBDBDB" BorderThickness="0" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>

                            <!-- Col 2 -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Address" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Address, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5" Margin="0,0,0,10"/>

                                <TextBlock Text="Work Phone" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Work_Phone, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Website" Style="{StaticResource FieldLabel}"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                                             Text="{Binding SelectedManagerDistributor.Website, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="#3F4347" Foreground="#DBDBDB" Padding="5"/>
                                    <Button Grid.Column="1" Content="ðŸŒ" 
                                            Margin="10,0,0,0"
                                            Click="OpenWebsite_Click"
                                            Tag="{Binding SelectedManagerDistributor.Website}"
                                            Background="Transparent" Foreground="#DBDBDB" BorderThickness="0" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>


                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="âŒ Clear" 
                                    Command="{Binding ClearDistributorCommand}" 
                                    Style="{StaticResource RoundedButtonStyle}" 
                                    Background="#6B7280" 
                                    Tag="#4a4a4f" 
                                    Foreground="White"  
                                    BorderThickness="0" 
                                    Margin="0,0,10,0" 
                                    FontSize="14"
                                    Cursor="Hand"/>
                            <Button Content="ðŸ’¾ Save" 
                                    Command="{Binding SaveDistributorCommand}"
                                    Style="{StaticResource RoundedButtonStyle}" 
                                    Background="#10B981" 
                                    Tag="#0a4a0f" 
                                    Foreground="White"  
                                    BorderThickness="0" 
                                    FontSize="14"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- List Header -->
                 <TextBlock Grid.Row="2" Text="Existing Distributors" FontWeight="SemiBold" Foreground="#DBDBDB" Margin="0,0,0,10" VerticalAlignment="Top"/>

                <!-- List -->
                <DataGrid Grid.Row="2" Margin="0,30,0,0"
                          ItemsSource="{Binding DistributorManagerList}"
                          SelectedItem="{Binding SelectedManagerDistributor}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="#2D3035" Foreground="#DBDBDB"
                          RowStyle="{StaticResource GlobalDataGridRowStyle}"
                          CellStyle="{StaticResource GlobalDataGridCellStyle}"
                          GridLinesVisibility="All" HeadersVisibility="Column" BorderThickness="0"
                          HorizontalGridLinesBrush = "#3F4347" VerticalGridLinesBrush = "#3F4347">

                   <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="SeparatorVisibility" Value="Visible"/>
                            <Setter Property="SeparatorBrush" Value="Red"/> <!-- Temporarily Red to prove it works, user can change back -->
                            <Setter Property="Background" Value="#3F4347"/>
                            <Setter Property="Foreground" Value="#DBDBDB"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/> <!-- Bottom border only -->
                            <Setter Property="BorderBrush" Value="#555"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                            
                                            <!-- The Separator (Right Side) -->
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right"
                                                   Cursor="SizeWE"
                                                   Width="1"
                                                   Background="{TemplateBinding SeparatorBrush}"
                                                   Visibility="{TemplateBinding SeparatorVisibility}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="*"/>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸ—‘" Command="{Binding DataContext.DeleteDistributorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            Background="Transparent" BorderThickness="0" Foreground="#EF4444"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>

    </Grid>
</UserControl>
