<Window x:Class="Client_Management_System_V4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Client_Management_System_V4.ViewModel"
        xmlns:Menu="clr-namespace:Client_Management_System_V4.Utilities"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="950"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM />
    </Window.DataContext>

    <Grid>

        <!--// Window Border //-->

        <Border Background="#212529"
                CornerRadius="20" />

        <Grid>

            <!--// Base Grid //-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="700" />
            </Grid.ColumnDefinitions>

            <!--// Navigation Panel //-->

            <Grid HorizontalAlignment="Left"
                  Width="250">

                <Border Background="#272B2F"
                        CornerRadius="20,0,0,20" />

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" PanningMode="VerticalOnly" Margin="0,20,0,20">
                    <StackPanel Width="250">

                    <!--// Client //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ClientCommand}"
                              IsChecked="True">

                        <Grid>
                            <Image Source="Images/customer.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Clients"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>

                    </Menu:Btn>

                    <!--// Medical History //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding MedHxCommand}">

                        <Grid>
                            <Image Source="Images/medical-record.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Medical History"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>

                    </Menu:Btn>

                    <!--// Antropometrics //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding AntropometricsCommand}">

                        <Grid>
                            <Image Source="Images/body-temperature.png"
                                   Style="{StaticResource Image_Style}" />
                            <TextBlock Text="Antropometrics"
                                       Style="{StaticResource Text_Style}" />
                        </Grid>

                    </Menu:Btn>

                    <!--// Body Systems Overview //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding BodySystemsOverviewCommand}">

                        <Grid>

                            <Image Source="Images/endocrine.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Body Systems Overview"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Eye Analysis //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding EyeAnalysisCommand}">

                        <Grid>

                            <Image Source="Images/analysis.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Eye Analysis"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Reports //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ReportsCommand}">

                        <Grid>

                            <Image Source="Images/medical-record.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Reports"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Diet //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding DietCommand}">

                        <Grid>

                            <Image Source="Images/diet_2.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Diet"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Treatment //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding TreatmentCommand}">

                        <Grid>

                            <Image Source="Images/treatment-plan.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Treatment"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Prescription //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding PrescriptionCommand}">

                        <Grid>

                            <Image Source="Images/prescription.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Prescription"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    <!--// Supplements //-->

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding SupplementsCommand}">

                        <Grid>

                            <Image Source="Images/pills.png"
                                   Style="{StaticResource Image_Style}" />

                            <TextBlock Text="Supplements"
                                       Style="{StaticResource Text_Style}" />

                        </Grid>

                    </Menu:Btn>

                    </StackPanel>
                </ScrollViewer>

            </Grid>

            <Grid Grid.Column="1">

                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}" />

            </Grid>

        </Grid>

        <Button x:Name="CloseApp"
                Style="{StaticResource ExitApp}"
                Click="CloseApp_Click" />

    </Grid>

</Window>
